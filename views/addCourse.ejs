        <title>Course Management</title>
    </head>
    <body>
        <div class="container-fluid">
            <%- include ('./partials/nav.ejs') %>
            <div class="row" style="margin-top: 70px;" >
                <div class="col col-8 m-auto">
                    <h1 class="mt-4">Add Course</h1>
                    <form class="mt-4">
                        <div class="form-group">
                          <label for="Course Name">Course Name</label>
                          <input type="text" class="form-control" name="cname" id="cname">
                        </div>
                        <div class="form-group">
                          <label for="Course Duration">Course Duration</label>
                          <input type="number" class="form-control" name="cduration" id="cduration" min="1">
                        </div>
                        <div class="form-group">
                            <label for="Course Fees">Course Fees</label>
                            <input type="number" class="form-control" name="cfees" id="cfees">
                          </div>
                        
                        <button type="submit" class="btn btn-primary">Add Course</button>
                      </form>
                </div>
            </div>
        </div>
        <script src="assets/courseList.js"></script>

    </body>
